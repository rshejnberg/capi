<h2>Log in</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), :html => {:class => 'container'}) do |f| %>
  <div class="field">
    <%= f.input :email, autofocus: true %>
  </div>

  <div class="field">
    <%= f.input :password, autocomplete: "off" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.input :remember_me %>

    </div>
  <% end -%>

  <div class="actions">
    <%= f.button :submit, "Log in" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
